{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=WeatherDb;Username=postgres;Password=password"
  },
  "OpenWeather": {
    "ApiKey": "YOUR_OPENWEATHER_KEY_HERE"
  },
  "AI": {
    "CerebrasKey": "YOUR_CEREBRAS_KEY",
    "GroqKey": "YOUR_GROQ_KEY",
    "DeepSeekKey": "YOUR_DEEPSEEK_KEY",
    "MistralKey": "YOUR_MISTRAL_KEY",
    "GeminiKey": "YOUR_GEMINI_KEY"
  }
  ,
  "Email": {
    "Username": "your-email@gmail.com",
    "Password": "YOUR_APP_PASSWORD_HERE"
  },
  "App": {
    "DashboardUrl": "http://localhost:5173"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "QuotaExceededMessage": "Rate limit exceeded. Please try again later.",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "1d",
        "Limit": 5000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "*",
        "Rules": [
          {
            "Endpoint": "POST:/api/auth/login",
            "Period": "15m",
            "Limit": 5
          },
          {
            "Endpoint": "POST:/api/auth/register",
            "Period": "1h",
            "Limit": 3
          },
          {
            "Endpoint": "POST:/api/auth/register",
            "Period": "1d",
            "Limit": 5
          },
          {
            "Endpoint": "GET:/api/weather/*",
            "Period": "1m",
            "Limit": 30
          },
          {
            "Endpoint": "GET:/api/weather/*",
            "Period": "1h",
            "Limit": 500
          },
          {
            "Endpoint": "GET:/api/weather/advice",
            "Period": "1m",
            "Limit": 10
          },
          {
            "Endpoint": "GET:/api/weather/advice",
            "Period": "1h",
            "Limit": 100
          },
          {
            "Endpoint": "GET:/api/weather/search",
            "Period": "1m",
            "Limit": 20
          },
          {
            "Endpoint": "GET:/api/favorites*",
            "Period": "1m",
            "Limit": 30
          },
          {
            "Endpoint": "POST:/api/favorites*",
            "Period": "1m",
            "Limit": 10
          },
          {
            "Endpoint": "DELETE:/api/favorites*",
            "Period": "1m",
            "Limit": 10
          }
        ]
      }
    ]
  }
}